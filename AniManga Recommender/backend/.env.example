# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_service_role_key
DATABASE_URL=postgresql://postgres:password@your-project-id.supabase.co:5432/postgres

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_flask_secret_key_here
DEBUG=True

# Cache Configuration (Hybrid Cache)
CACHE_MEMORY_SIZE=1000
CACHE_MEMORY_MB=100
CACHE_THREAD_LOCAL=true

# Compute Endpoints
COMPUTE_TASK_TIMEOUT=300
COMPUTE_ENABLE_ASYNC=true

# API Configuration
API_RATE_LIMIT=10
MAX_ITEMS_PER_PAGE=50

# Development Settings
LOCAL_DEVELOPMENT=False
USE_LOCAL_SUPABASE=False

# External Services (Optional)
MAL_CLIENT_ID=your_mal_client_id
MAL_CLIENT_SECRET=your_mal_client_secret

# GitHub Actions Secret (for scheduled tasks)
# API_KEY=your_api_key_for_scheduled_tasks